<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bill Total:"
        android:id="@+id/lblBillTotal"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:gravity="right"
        android:textColor="#ffffffff"
        android:layout_toStartOf="@+id/txtTipPercentage"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Person(s):"
        android:id="@+id/lblPersons"
        android:layout_alignBottom="@+id/txtPersons"
        android:layout_alignParentStart="true"
        android:gravity="right"
        android:textColor="#ffffffff"
        android:layout_alignEnd="@+id/lblIndividualTip"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tip Percentage:"
        android:id="@+id/lblTipPercentage"
        android:layout_alignBottom="@+id/txtTipPercentage"
        android:layout_alignParentStart="true"
        android:gravity="right"
        android:textColor="#ffffffff"
        android:layout_alignEnd="@+id/lblPersons"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtBillTotal"
        android:layout_alignParentEnd="true"
        android:gravity="bottom|right"
        android:layout_alignStart="@+id/txtTipPercentage"
        android:layout_toRightOf="@+id/lblBillTotal"
        android:text="0"
        android:layout_marginTop="15dp"
        android:textColor="#ffffffff"
        android:singleLine="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/txtTipPercentage"
        android:layout_below="@+id/txtBillTotal"
        android:layout_alignParentEnd="true"
        android:gravity="right"
        android:layout_toEndOf="@+id/lblIndividualTotal"
        android:layout_toRightOf="@+id/lblTipPercentage"
        android:textColor="#ffffffff"
        android:singleLine="false"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtPersons"
        android:layout_alignParentEnd="true"
        android:gravity="right"
        android:layout_alignStart="@+id/txtTipPercentage"
        android:layout_toRightOf="@+id/lblPersons"
        android:textColor="#ffffffff"
        android:layout_below="@+id/lblTipPercentage"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtIndividualTip"
        android:layout_marginTop="17dp"
        android:layout_alignEnd="@+id/txtPersons"
        android:layout_alignStart="@+id/txtPersons"
        android:gravity="right"
        android:layout_toRightOf="@+id/lblIndividualTip"
        android:layout_below="@+id/txtPersons"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Individual Tip:"
        android:id="@+id/lblIndividualTip"
        android:layout_alignTop="@+id/txtIndividualTip"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:gravity="right"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/lblIndividualTotal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Individual Total:"
        android:id="@+id/lblIndividualTotal"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/lblIndividualTip"
        android:layout_alignParentStart="true"
        android:gravity="right"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtIndividualTotal"
        android:layout_alignBottom="@+id/lblIndividualTotal"
        android:layout_alignEnd="@+id/txtIndividualTip"
        android:layout_alignStart="@+id/txtIndividualTip"
        android:gravity="right"
        android:layout_toRightOf="@+id/lblIndividualTotal"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Tip:"
        android:id="@+id/lblTotalTip"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lblIndividualTotal"
        android:layout_alignParentStart="true"
        android:gravity="right"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/lblIndividualTotal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtTotalTip"
        android:layout_alignBottom="@+id/lblTotalTip"
        android:layout_alignEnd="@+id/txtIndividualTotal"
        android:layout_alignStart="@+id/txtIndividualTotal"
        android:gravity="right"
        android:layout_toRightOf="@+id/lblTotalTip"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Amount:"
        android:id="@+id/lblTotalAmount"
        android:layout_below="@+id/lblTotalTip"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/lblTotalTip"
        android:gravity="right"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtTotalAmount"
        android:layout_alignBottom="@+id/lblTotalAmount"
        android:layout_alignEnd="@+id/txtTotalTip"
        android:layout_alignStart="@+id/txtTotalTip"
        android:gravity="right"
        android:layout_toRightOf="@+id/lblTotalAmount"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btnLessTip"
        android:layout_marginTop="14dp"
        android:background="#ffff9000"
        android:textStyle="bold"
        android:layout_below="@+id/lblTotalAmount"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnMoreTip"
        android:layout_alignTop="@+id/btnLessTip"
        android:layout_alignEnd="@+id/txtTotalAmount"
        android:background="#ffff9000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tip Percentage"
        android:id="@+id/lblTipControl"
        android:layout_alignBaseline="@+id/btnMoreTip"
        android:layout_alignBottom="@+id/btnMoreTip"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btnLessPersons"
        android:layout_below="@+id/btnLessTip"
        android:layout_alignEnd="@+id/btnLessTip"
        android:background="#ffff9000"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/btnMorePersons" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnMorePersons"
        android:layout_below="@+id/btnMoreTip"
        android:layout_alignStart="@+id/btnMoreTip"
        android:background="#ffff9000"
        android:layout_marginTop="5dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/btnResetValues"
        android:background="#ffff9000"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/btnExit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Person(s)"
        android:id="@+id/lblPersonsControl"
        android:layout_alignBaseline="@+id/btnMorePersons"
        android:layout_alignBottom="@+id/btnMorePersons"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/btnExit"
        android:background="#ffff9000"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnResetValues"
        android:layout_marginLeft="4dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round"
        android:id="@+id/btnRound"
        android:background="#ffff9000"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnResetValues"
        android:layout_marginRight="4dp"
        android:layout_alignTop="@+id/btnResetValues" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rounded Percentage:"
        android:id="@+id/lblRoundedPercentage"
        android:gravity="right"
        android:textColor="#ffffffff"
        android:layout_below="@+id/lblTipPercentage"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txtPersons" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-"
        android:id="@+id/txtRoundedPercentage"
        android:layout_alignTop="@+id/lblRoundedPercentage"
        android:layout_alignEnd="@+id/txtTipPercentage"
        android:layout_toEndOf="@+id/lblPersons"
        android:gravity="right"
        android:textColor="#ffffffff" />

</RelativeLayout>
